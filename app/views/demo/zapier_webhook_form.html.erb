<div>
  <h1>Test Zapier Webhooks</h1>

  <input type="text" id="emailInput" placeholder="Enter email">
  <button onclick="sendPostRequest()">Submit</button>
</div>

<script>
    function sendPostRequest() {
        // Get the value of the input field
        const emailValue = document.getElementById('emailInput').value;

        // Create a JSON object with the email value
        const data = {
            email: emailValue
        };

        // Create an XMLHttpRequest object
        const xhr = new XMLHttpRequest();

        // Specify the request type, URL, and set it to asynchronous
        xhr.open('POST', 'https://hooks.zapier.com/hooks/catch/17223669/3f4dpe4/', true);

        // Set the request header to send JSON data
        xhr.setRequestHeader('Content-Type', 'application/json');

        // Convert the data object to a JSON string
        const jsonData = JSON.stringify(data);

        // Set up the callback function to handle the response
        xhr.onload = function () {
            if (xhr.status >= 200 && xhr.status < 300) {
                // Request was successful
                console.log('Success:', xhr.responseText);
            } else {
                // Request failed
                console.error('Error:', xhr.statusText);
            }
        };

        // Send the JSON data in the request body
        xhr.send(jsonData);
    }
</script>